{
  "compilerOptions": {
    "outDir": "./dist",   
    "target": "es5",                          
    "module": "commonjs",                       
    "esModuleInterop": true,                  
    "allowJs": true,                     
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true 
  },
  "include": [
    "src/**/*.ts", "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    ".vscode"
  ]
}

